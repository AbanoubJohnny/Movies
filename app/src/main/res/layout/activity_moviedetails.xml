<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/container_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/movie_cover_image_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mrg_160"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/fav_imageview"
                    android:layout_width="@dimen/mrg_50"
                    android:layout_height="@dimen/mrg_50"
                    android:layout_alignBottom="@id/movie_cover_image_imageview"
                    android:layout_alignEnd="@id/movie_cover_image_imageview"
                    android:layout_margin="@dimen/mrg_15"
                    android:layout_marginEnd="@dimen/mrg_20"
                    android:layout_marginTop="@dimen/mrg_20"
                    android:src="@drawable/not_fav" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_movie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_cover_image_imageview"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mrg_10"
                        android:padding="@dimen/mrg_5">

                        <ImageView
                            android:id="@+id/movie_image_imageview"
                            android:layout_width="@dimen/mrg_130"
                            android:layout_height="@dimen/mrg_160"
                            android:layout_marginStart="@dimen/mrg_5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@id/movie_image_imageview"
                            android:layout_alignTop="@id/movie_image_imageview"
                            android:layout_toEndOf="@id/movie_image_imageview"
                            android:orientation="vertical">

                            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                                android:id="@+id/movie_title_textview"
                                style="@android:style/TextAppearance.Large"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/mrg_10"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:padding="@dimen/mrg_10"
                                android:textSize="@dimen/text_20" />

                            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.RegularTextView
                                android:id="@+id/movie_rate_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="@dimen/text_20" />

                            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.RegularTextView
                                android:id="@+id/movie_date_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="@dimen/text_20" />

                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_movie_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_movie_detail"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/mrg_5"
                    android:layout_marginLeft="@dimen/movie_detail_cards_margin_left_right"
                    android:layout_marginRight="@dimen/movie_detail_cards_margin_left_right"
                    android:layout_marginTop="@dimen/mrg_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/mrg_10">

                        <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                            android:id="@+id/text_movie_overview_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_detail_overview_title"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <abanoub.johnny.development.moviesapp.utils.customeviews.textview.RegularTextView
                            android:id="@+id/movie_overview_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/mrg_10"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/mrg_50"
                android:layout_height="@dimen/mrg_50"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/mrg_10"
                android:layout_marginTop="@dimen/mrg_10"
                android:src="@drawable/close" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/mrg_10">

            <abanoub.johnny.development.moviesapp.utils.customeviews.edittext.RegularEditTextView
                android:id="@+id/search_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/edit_text"
                android:drawableEnd="@drawable/search"
                android:drawablePadding="@dimen/mrg_10"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/favourites_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/mrg_10"
            android:layout_marginTop="@dimen/mrg_10"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="@dimen/mrg_10"
            android:visibility="visible">

            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favourites_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/favourites_recycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mrg_160"
                android:layout_marginTop="@dimen/mrg_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popular_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/mrg_10"
            android:layout_marginTop="@dimen/mrg_10"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="@dimen/mrg_10">

            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popural_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/popular_recycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mrg_160"
                android:layout_marginTop="@dimen/mrg_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toprated_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/mrg_10"
            android:layout_marginTop="@dimen/mrg_10"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="@dimen/mrg_10">

            <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toprated_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/toprated_recycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mrg_160"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/mrg_10" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

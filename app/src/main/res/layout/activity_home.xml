<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="@dimen/mrg_10">

        <abanoub.johnny.development.moviesapp.utils.customeviews.edittext.RegularEditTextView
            android:id="@+id/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:drawableEnd="@drawable/search"
            android:drawablePadding="@dimen/mrg_10"
            android:hint="@string/search_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/search_relativelayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/favourites_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/mrg_10"
                android:layout_marginTop="@dimen/mrg_10"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/mrg_10"
                android:visibility="visible">

                <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favourites_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/favourites_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mrg_160"
                    android:layout_marginTop="@dimen/mrg_10"
                    app:fastScrollEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popular_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/mrg_10"
                android:layout_marginTop="@dimen/mrg_10"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/mrg_10">

                <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popural_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/popular_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mrg_160"
                    android:layout_marginTop="@dimen/mrg_10"
                    app:fastScrollEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toprated_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/mrg_10"
                android:layout_marginTop="@dimen/mrg_10"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/mrg_10">

                <abanoub.johnny.development.moviesapp.utils.customeviews.textview.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/toprated_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/toprated_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mrg_160"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/mrg_10"
                    app:fastScrollEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>